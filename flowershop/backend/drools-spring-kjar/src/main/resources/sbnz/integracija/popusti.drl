package sbnz.integracija;

import com.flowershop.model.Kupac;


rule "13"
    when
        $k: Kupac( ukupnaCena >= 5000.0 && ukupnaCena < 10000.0 )
    then
        modify($k) { setPopust(10.0) }
    	System.out.println("13: Popust 10% za kupca " + $k.getUsername());

end

